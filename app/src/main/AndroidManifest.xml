<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ng.canon.lited">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Suite.InstaPage" />
        <activity
            android:name=".Suite.HashView"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".Suite.PostView" />
        <activity android:name=".Suite.VideoPostView" />
        <activity android:name=".StoryCam.VideoPlayer" />
        <activity android:name=".StoryCam.PhotoPlayer" />
        <activity android:name=".Stories.StoryView" />
        <activity android:name=".Suite.Greedy"></activity>
    </application>

</manifest>